<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
        android:id="@+id/playTrailerButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/play_trailer_icon" />

    <TextView
        android:id="@+id/trailerNameTextView"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:textSize="@dimen/textSizeMedium"
        app:layout_constraintLeft_toRightOf="@id/playTrailerButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/playTrailerButton"
        android:background="#DDDDDD" />
</android.support.constraint.ConstraintLayout>
